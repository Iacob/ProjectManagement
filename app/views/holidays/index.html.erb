<h1>Listing holidays</h1>

<div style="border: 1px solid black; padding: 5px">
<table>
  <tr>
    <th>Holiday date</th>
    <th>Descr</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @holidays.each do |holiday| %>
  <tr>
    <td><%= holiday.holiday_date %></td>
    <td><%= holiday.descr %></td>
    <td><%= image_tag('icons/detail.png', :class => :icon) %><%= link_to 'Show', holiday %></td>
    <td><%= image_tag('icons/edit.png', :class => :icon) %><%= link_to 'Edit', edit_holiday_path(holiday) %></td>
    <td><%= image_tag('icons/delete.png', :class => :icon) %><%= link_to 'Destroy', holiday, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>

<br />

<%= link_to 'New Holiday', new_holiday_path %>
