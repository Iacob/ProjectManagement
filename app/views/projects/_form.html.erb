<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date, :start_year => 1980, :end_year => 2050 %>
  </div>

  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date, :start_year => 1980, :end_year => 2050 %>
  </div>

  Workitems:<br />
  <div style="border: 1px solid black; min-width:300px; max-width:30%">
    <div class="field">
      <% @allWorkitems.each do |i|  %>
        <% _projectWorkitemExists = true if ((!@projectWorkitems.nil?) and @projectWorkitems.exists?(i)) %>
        <%= checkbox_and_label("selected_project_workitems", "selected_project_workitems[]", i.name, i.id, _projectWorkitemExists) %>
	<br />
      <% end %>
    </div>
  </div>
  <br />

  Teams working on this project:<br />
  <div style="border: 1px solid black; min-width:300px; max-width:30%">
    <div class="field">
      <% @allTeams.each do |t|  %>
        <% _projectTeamExists = true if ((!@projectTeams.nil?) and @projectTeams.exists?(t)) %>
        <%= checkbox_and_label("selected_project_teams", "selected_project_teams[]", t.name, t.id, _projectTeamExists) %>
	<br />
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
